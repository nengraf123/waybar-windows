{
    "layer": "top",
    "position": "bottom",
    "height": 40,
    "spacing": 4,
    "modules-left": [
        "custom/launcher",
        "custom/search",
        "wlr/taskbar"
    ],
    "modules-center": [],
    "modules-right": [
        "tray",
        "custom/tray",
        "custom/system-info",
        "battery",
        "network",
        "pulseaudio",
        "clock"
    ],
    "custom/launcher": {
        "format": "\uf17a", // –°–∏–º–≤–æ–ª Windows –∏–∑ Font Awesome
        "on-click": "/home/graf/.config/waybar/start_menu.sh",
        "tooltip": false
    },
    "custom/search": {
        "format": "üîç Search",
        "on-click": "wofi --show drun --prompt 'Search'",
        "tooltip": "Search apps and files"
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 16,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "all-outputs": true
    },
    "tray": {
        "icon-size": 16,
        "spacing": 8,
        "tooltip": "System Tray"
    },
    "custom/tray": {
        "format": "‚ñ≤",
        "on-click": "/home/graf/.config/waybar/close_window.sh",
        "on-click-right": "kitty -e btop",
        "tooltip": "Close active windows or open task manager"
    },
    "custom/system-info": {
        "format": "    ",
        "on-click": "/home/graf/.config/waybar/system_info.sh",
        "tooltip": "Show system info"
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}",
        "format-charging": "ÔÉß {capacity}%",
        "format-plugged": "ÔÉß {capacity}%",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "network": {
        "interface": "wlan0",
        "format-wifi": "Û∞ñ© {essid}",
        "format-disconnected": "Û∞ñ™ Disconnected",
        "tooltip-format": "{ifname}: {ipaddr}",
        "on-click": "kitty -e nmtui"
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "Û∞ùü Muted",
        "format-icons": {
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pamixer --toggle-mute",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "scroll-step": 5
    },
    "clock": {
        "format": "{:%I:%M %p\n%y-%m-%d}",
        "tooltip-format": "<big>{:%Y-%m-%d %H:%M}</big>"
    }
}
